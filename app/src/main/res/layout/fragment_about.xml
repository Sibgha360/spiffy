<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaderboardFragment"
    android:background="@color/colorAccentLight">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/a0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:padding="50dp"
                            android:text="SPIFFY"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#FFF"
                            android:textSize="@dimen/space_4x"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/a1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccentLight"
                            android:padding="10dp"
                            android:text="Spiffy is about strengthening and supporting your own city community;"
                            android:textAlignment="center"
                            android:textColor="#000"
                            android:textSize="@dimen/space_2x"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/a2"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccentLight"
                            android:text="For example, by being able to report minor grievances (overcrowded rubbish bins, defective traffic lights, ...) directly and easily to the city administration or by making free WiFi networks available.Â "
                            android:textColor="#000" />

                        <TextView
                            android:id="@+id/a3"
                            android:padding="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorAccentLight"
                            android:text="These 'good deeds' are also rewarded with vouchers from local shops and the like."
                            android:textColor="#000" />
                </LinearLayout>

                <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-3940256099942544/6300978111"/>
        </RelativeLayout>
<!--        -->
<!--    />-->
</FrameLayout>